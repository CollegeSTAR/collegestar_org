<%= render 'shared/social_media/facebook_init' %>
<%= render 'shared/social_media/twitter_init' %>
<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <p id="notice"><%= notice %></p>
      
      <h1><%= @page_content.title.html_safe %></h1>        
      <%= render( 'shared/bread_crumb_social_media', 
            bread_crumb_args: {
              page_name: 'udl modules & case studies',
              parents: [
                [ 'faculty', faculty_path]
              ]
            }, 
            social_media_args: {
              show: true,
              tweet_text: 'Faculty Development Modules'
            }
          ) %>
      <%= @page_content.text.html_safe %>
      <h3>Currently Available Modules</h3>
        <div class="udl-module-list-wrapper">
          <% @modules.each do |udl_module| %>
            <div class="udl-module-wrapper">
              <div class="title-image-wrapper">
                <% if udl_module.title_image.exists? %>
                  <%= image_tag udl_module.title_image.url(:medium) %> 
                <% else %>
                  <%= image_tag "defaults/medium/module_title_image.png" %>
                <% end %>
              </div>
              <div class="title-wrapper">
                <h1><%= link_to( udl_module.title, udl_module ) %>
                <% if policy(udl_module).edit? %>
                <span class="edit-module-link"> 
                  <%= link_to(
                    fa_icon( "pencil", text: "Edit this module" ),
                    edit_udl_module_path( udl_module ) 
                  ) %>
                </span>
                </h1>
              <% end %>
              </div>
              <div class="description-wrapper">
                <%= udl_module.description.html_safe %>
                <% if udl_module.released_case_studies.count > 0 %> 
                  <h2>Case Studies</h2>
                  <% udl_module.released_case_studies.each do |case_study| %>
                    <div class="case-study-wrapper">
                      <div class="case-study-image-wrapper">
                        <%= image_tag case_study.title_image.url(:case_study) %>
                      </div>
                      <div class="case-study-info-wrapper">
                        <div class="title-wrapper">
                          <%= link_to case_study.title.html_safe, udl_module_path(slug: case_study.slug) %>
                        </div>
                        <div class="description-wrapper">
                          <%= case_study.description.html_safe %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

