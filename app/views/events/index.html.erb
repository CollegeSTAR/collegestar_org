<% content_for :title, "Events" %>
<div id="content-wrapper">
<div id="single-column-wrapper">
<div id="content">
<p id="notice"><%= notice %></p>

<h1>College STAR Events</h1>
<%= render( 
      'shared/bread_crumb_social_media', 
      bread_crumb_args: {
        page_name: 'events'
      }
    )
%>

<h2>Upcoming Events</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to(event.name, event_path(event)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Event).create? %>
<%= link_to 'New Event', new_event_path %>
<% end %>
<h2>Past Events</h2>
</div>
</div>
</div>
