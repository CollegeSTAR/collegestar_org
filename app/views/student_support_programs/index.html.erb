<% content_for :title, "Student Support Programs" %>

<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <h1>Student Support Programs</h1>
      
      <div id="student-support-programs">
        <% @student_support_programs.each do |program| %>
          <div class="program-wrapper">
            <div class="logo-wrapper">
              <img src="<%= program.logo.url %>" />
            </div>
            <div class="name-wrapper">
              <h1><%= program.name.html_safe %></h1>
            </div>
            <div class="mission-statement-wrapper">
              <%= program.mission_statement.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
