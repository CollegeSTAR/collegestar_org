<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <h1><%= @udl_module_section.title %></h1>
      <p>
        <%= link_to( 
              fa_icon( 'arrow-left', text: 'Back to module' ), 
              udl_module_path(@udl_module, anchor: @udl_module_section.slug), 
              class: 'nav-button'
            ) %>

      <%= render 'edit_form' %>
      </p>
      <h1>Danger Zone</h1>
        <p>
          <%= link_to( 
                fa_icon( 'minus', text: 'Delete this Section' ), 
                udl_module_section_path(udl_module_slug: @udl_module.slug, slug: @udl_module_section.slug), 
                data: {
                  method: :delete,
                  confirm: "Are you sure you want to delete this section?"
                },
                class: 'delete-button' 
              ) %>
        </p>
    </div>
  </div>
</div>
