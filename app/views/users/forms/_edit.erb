<%= form_for(@user) do |f| %>
  <%= render "users/forms/errors", users: @users %>
  <div id="user-edit-fields-wrapper">
    <%= render "users/forms/fields/name_email", f: f %>
    <%= render "users/forms/fields/edit_campuses", f: f %>
    <%= render "users/forms/fields/department", f: f %>
  </div>
  <% if policy(Role).grant? %>
    <h2>User's Roles</h2>
    <%= render "users/forms/fields/roles", f: f %>
  <% end %>
  <%= render "users/forms/fields/update_user_submit", f: f %>
<% end %>
