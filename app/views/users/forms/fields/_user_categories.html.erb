<h3 class="check-box-list-heading">I am a(n): <span class="explanation-text">(check all that apply)</span></h3>

<div id="user-categories-check-boxes-wrapper">
  <%= f.collection_check_boxes(:user_category_ids, @user_categories, :id, :name) do |b| %>
    <div class="field"> 
      <%= b.label(class: 'user_category_check_box') { b.check_box + b.text } %>
    </div>
  <% end %>
</div>
