<div class="field-wrapper">
  <div class="text-field-label">
    <%= f.label :faculty_first_name, "First Name" %>
  </div>
  <div class="text-field">
    <%= f.text_field :faculty_first_name %>
  </div>
</div>
<div class="field-wrapper">
  <div  class="text-field-label">
    <%= f.label :faculty_last_name, "Last Name" %>
  </div>
  <div class="text-field">
    <%= f.text_field :faculty_last_name %>
  </div> 
</div>
<div class="field-wrapper">
  <div class="select-box-label">
    <%= f.label :Department_id, "Department" %>
  </div>
  <div class="select-box">
  <%= f.select( :department_id ) do %>
      <%= content_tag(:option, "please select") %>
      <% @colleges.each do |college| %>
        <%= content_tag(:option, "--#{college.name}--".html_safe, disabled: true) %>
        <% college.departments.order( :name ).each do |department| %>
          <%= content_tag(:option, department.name, value: department.id ) %>
        <% end %>
      <% end %>
  <% end %>
  </div>
</div>
