<%= render 'shared/social_media/facebook_init' %>
<%= render 'shared/social_media/twitter_init' %>
<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <h1><%= @news_article.title %>
        <% if policy(@news_article).edit? %>
          <span class="edit-news-article-link"> 
            <%= link_to(
                  fa_icon( "pencil", text: "Edit this article" ),
                  edit_news_article_path( @news_article ) 
                ) %>
          </span>
        <% end %>
      </h1>
      <%= render( 'shared/bread_crumb_social_media', 
            bread_crumb_args: {
              page_name: @news_article.title,
              parents: [
                [ 'news archive', news_articles_path ]
              ]
            },
            social_media_args: {
              show: true,
              tweet_text: @news_article.title
            }
        ) %>
      
        <%= @news_article.content.html_safe %>
        <div id="back-link-wrapper">
          <%= link_to( 
                fa_icon("arrow-left", text: "back to Articles"), 
                news_articles_path 
              ) %>
        </div>
    </div>
  </div>
</div>
